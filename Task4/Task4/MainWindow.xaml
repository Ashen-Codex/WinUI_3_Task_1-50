<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="Task4.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Task4"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Task4">

    <Grid x:Name="RootGrid" Background="Red">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Button Content="Изменить цвет" Click="OnColorChange"
                    Padding="20,10" FontSize="16"/>
            <TextBlock x:Name="ColorLabel" Text="Красный"
                      FontSize="20" Margin="0,10,0,0"
                      HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
